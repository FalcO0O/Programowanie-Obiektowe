<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="700.0" minWidth="1200.0"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter"
            stylesheets="styles.css">
    <center>
    <ScrollPane fitToWidth="true" fitToHeight="true">
        <HBox spacing="10" alignment="CENTER">
            <VBox minWidth="250" maxHeight="570" minHeight="570" spacing="8" styleClass="stat-box">
                <Label text="Map Stats" styleClass="header"/>
                <Label text="Number of animals:" styleClass="stat-label"/>
                <Label fx:id="animalsNumber" styleClass="stat-value"/>
                <Label text="Number of plants:" styleClass="stat-label"/>
                <Label fx:id="plantsNumber" styleClass="stat-value"/>
                <Label text="Number of free positions:" styleClass="stat-label"/>
                <Label fx:id="freePositionsNumber" styleClass="stat-value"/>
                <Label text="Most popular genotypes:" styleClass="stat-label"/>
                <Label fx:id="genotypeRanking" styleClass="stat-value"/>
                <Label text="Average energy level:" styleClass="stat-label"/>
                <Label fx:id="averageEnergyLevel" styleClass="stat-value"/>
                <Label text="Average lifespan:" styleClass="stat-label"/>
                <Label fx:id="averageDeadLifespan" styleClass="stat-value"/>
                <Label text="Average number of children:" styleClass="stat-label"/>
                <Label fx:id="averageChildrenNumber" styleClass="stat-value"/>
                <Label text="Set tick rate:" styleClass="stat-label"/>
                <Slider fx:id="tickRateSlider" min="50" max="2000" value="500" />
                <Button fx:id="stopButton" onAction="#onStopButtonClicked"
                        alignment="CENTER" minWidth="230">Stop Simulation</Button>
            </VBox>
            <GridPane fx:id="mapGrid" gridLinesVisible="true"/>
            <VBox minWidth="250" maxHeight="570" minHeight="570" spacing="8" styleClass="stat-box">
                <Label text="Animal Stats" styleClass="header"/>
                <Label text="Genotype:" styleClass="stat-label"/>
                <Label fx:id="animalGenes" styleClass="stat-value"/>
                <Label text="Current gene:" styleClass="stat-label"/>
                <Label fx:id="animalCurrentGene" styleClass="stat-value"/>
                <Label text="Energy:" styleClass="stat-label"/>
                <Label fx:id="animalEnergy" styleClass="stat-value"/>
                <Label text="Number of consumed plants:" styleClass="stat-label"/>
                <Label fx:id="animalConsumedPlantsNumber" styleClass="stat-value"/>
                <Label text="Number of children:" styleClass="stat-label"/>
                <Label fx:id="animalChildrenNumber" styleClass="stat-value"/>
                <Label text="Number of descendants:" styleClass="stat-label"/>
                <Label fx:id="animalDescendantsNumber" styleClass="stat-value"/>
                <Label fx:id="animalLifespanOrDeathDayDescription" styleClass="stat-label"/>
                <Label fx:id="animalLifespanOrDeathDay" styleClass="stat-value"/>
                <Button fx:id="showDominantGenotypeButton" onAction="#onShowDominantGenotypeClicked" minWidth="230">Show/Hide dominant genotype</Button>
                <Button fx:id="showPriorityPlantsButton" onAction="#onShowPriorityPlantsClicked" minWidth="230">Show/Hide priority plant positions</Button>
            </VBox>
        </HBox>
    </ScrollPane>
    </center>
</BorderPane>
